<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="rectify.app.platformaegabimeve.Splash">

    <LinearLayout
        android:background="@color/finalblue"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="250dp"
            android:layout_height="39dp"
            android:layout_below="@id/edit_text_file_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/style_spinner1" />

        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:backgroundTint="@color/finalyell"
            app:icon="@drawable/right"
            android:id="@+id/button_vazhdo"
            android:layout_marginTop="50dp"
            android:layout_below="@id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vazhdo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />




    </LinearLayout>

</RelativeLayout>